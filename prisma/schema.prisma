generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  link        String?
  techStack   String
  linkType    String   @default("github")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CV {
  id        Int      @id @default(autoincrement())
  filename  String
  url       String   @db.Text
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Message {
  id            Int      @id @default(autoincrement())
  name          String
  contactNumber String?
  email         String
  subject       String?
  message       String
  attachmentUrl String?
  isRead        Boolean  @default(false)
  createdAt     DateTime @default(now())
}

model Profile {
  id        Int      @id @default(autoincrement())
  imageUrl  String?
  updatedAt DateTime @updatedAt
}

model Skill {
  id    Int    @id @default(autoincrement())
  name  String
  level Int
}
